<div class="card-body">
    <h5 class="card-title">{{viewTitle}}</h5>
    <form class="" action="/admin/video/add" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="_id" value="{{video._id}}">
        <div class="position-relative row form-group"><label for="tieuDe" class="col-sm-2 col-form-label">Tiêu
                đề</label>
            <div class="col-sm-10"><input name="tieuDe" placeholder="Tiêu đề video" value="{{video.tieu_de}}" type="text"
                    class="form-control" required></div>
            <div class="invalid-feedback">
                    {{video.tieuDeError}}
            </div>
        </div>
          <div class="position-relative row form-group"><label for="nguonDang" class="col-sm-2 col-form-label">Nguồn đăng</label>
            <div class="col-sm-10"><input name="nguonDang" placeholder="Nguồn đăng" value="{{video.nguon_dang}}" type="text"
                    class="form-control" required></div>
        </div>
        <div class="position-relative row form-group"><label for="urlNhung" class="col-sm-2 col-form-label">Url nhúng</label>
            <div class="col-sm-10"><input name="urlNhung" placeholder="Url Nhúng" value="{{video.url_nhung}}" type="text"
                    class="form-control" required></div>
        </div>
        <div class="position-relative row form-group"><label for="thoiLuong" class="col-sm-2 col-form-label">Thời lượng</label>
            <div class="col-sm-10"><input name="thoiLuong" placeholder="Thời Lượng" value="{{video.thoi_luong}}" type="text"
                    class="form-control" required></div>
        </div>
        <div class="position-relative row form-group"><label for="soLuotXem" class="col-sm-2 col-form-label">Số lượt xem</label>
            <div class="col-sm-10"><input name="soLuotXem" placeholder="Số Lượt Xem" value="{{video.thoi_luong}}" type="text"
                    class="form-control" required></div>
        </div>
        <div class="position-relative row form-group"><label for="exampleFile" class="col-sm-2">Thumbnail tin tức</label>
        <input name="hinhThumbnail" id="hinhThumbnail" type="file" class="form-control-file col-sm-8" required>
        </div>
        <div class="position-relative row form-check">
            <div class="col-sm-10 offset-sm-2">
                <button class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>