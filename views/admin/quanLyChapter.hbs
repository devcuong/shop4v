<div class="row">
    <div class="col-md-6">
        <h5 class="card-title">QUẢN LÝ TIN TỨC</h5>
         <button class="mb-2 btn-transition btn btn-success" onclick="quanLyTruyen()">
            TRANG QUẢN LÝ TRUYỆN</button>
    </div>
    <div class="col-md-6">
        <button class="mb-2 btn-transition btn btn-success" onclick="themChapter()">
            THÊM MỚI CHAPTER</button>
    </div>
</div>

<script>
    function themChapter() {
        location.href = "../chapter/add/{{idT}}";
    } 
     function quanLyTruyen() {
        location.href = "../truyen";
    } 
</script>
<table class="mb-0 table">
    <thead>
        <tr>
            <th>Tên chương</th>
            <th>Mã truyện</th>
            <th>Thời gian tạo</th>
            <th>Server truyện</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.ten_chuong}}</td>
            <td>{{this.ma_truyen}}</td>
            <td>{{this.thoi_gian_tao}}</td>
            <td>{{this.server_truyen}}</td>
            <td>
                <a href="/admin/chapter/edit/{{this._id}}/{{this.ma_truyen}}"><i class="fas fa-edit"></i></a>
                <a href="/admin/chapter/delete/{{this._id}}/{{this.ma_truyen}}" onclick="return confirm('Are you sure to delete this record ?');">
                    <i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>