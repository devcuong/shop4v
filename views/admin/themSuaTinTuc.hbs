<div class="card-body">
    <h5 class="card-title">{{viewTitle}}</h5>
    <form class="" action="/admin/tin-tuc/add" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="_id" value="{{tintuc._id}}">
        <div class="position-relative row form-group"><label for="tieuDe" class="col-sm-2 col-form-label">Tiêu
                đề</label>
            <div class="col-sm-10"><input name="tieuDe" placeholder="Tiêu đề tin" value="{{tintuc.tieu_de}}" type="text"
                    class="form-control" required></div>
            <div class="invalid-feedback">
                    {{tintuc.tieuDeError}}
            </div>
        </div>
          <div class="position-relative row form-group"><label for="nguonDang" class="col-sm-2 col-form-label">Nguồn đăng</label>
            <div class="col-sm-10"><input name="nguonDang" placeholder="Nguồn đăng" value="{{tintuc.nguon_dang}}" type="text"
                    class="form-control" required></div>
        </div>
        <div class="position-relative row form-group"><label for="nguoiDang" class="col-sm-2 col-form-label">Người
                Đăng</label>
            <div class="col-sm-10"><select name="nguoiDang" placeholder="Người đăng tin" type="text"
                    class="form-control">
                    <option value="cuong">Cường</option>
                    <option value="teo">Tèo</option>
                </select>
            </div>
        </div>
        {{!-- <div class="position-relative row form-group"><label for="exampleSelectMulti"
                class="col-sm-2 col-form-label">Select Multiple</label>
            <div class="col-sm-10"><select multiple="" name="selectMulti" id="exampleSelectMulti"
                    class="form-control"></select></div>
        </div> --}}
        <div class="position-relative row form-group"><label for="noiDungNgan" class="col-sm-2 col-form-label">Nội dung
                ngắn</label>
            <div class="col-sm-10"><textarea name="noiDungNgan" class="form-control"
                   required>{{tintuc.noi_dung_ngan}}</textarea>
            </div>
        </div>
        <div class="position-relative row form-group"><label for="noiDung" class="col-sm-2 col-form-label">Nội
                dung</label>
            <div class="col-sm-10"><textarea name="noiDung" id="noiDung" class="form-control">{{tintuc.noi_dung}}</textarea>
                <script type="text/javascript">
                    CKEDITOR.replace('noiDung', {
                        "extraPlugins": 'imagebrowser',
                        "imageBrowser_listUrl": "/files"
                    });
                </script>
            </div>
        </div>
        <div class="position-relative row form-group"><label for="exampleFile" class="col-sm-2">Thumbnail tin tức</label>
        <input name="hinhBao" id="hinhBao" type="file" class="form-control-file col-sm-8" required>
        </div>
        <div class="position-relative row form-check">
            <div class="col-sm-10 offset-sm-2">
                <button class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>